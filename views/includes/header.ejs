<header class="site-header">
  <nav class="main-navigation">
    <div class="nav-left">
      <input
        type="checkbox"
        id="mobile-menu-toggle"
        class="mobile-menu-checkbox"
      />
      <label for="mobile-menu-toggle" class="hamburger-button">
        <div class="hamburger-icon"></div>
      </label>

      <div class="mobile-nav-menu">
        <a href="/shot" class="nav-link">Explore</a>
        <a href="/shot/new" class="nav-link">Publish a Shot</a>
        <a href="/privacy" class="nav-link">Privacy</a>
        <% if(!currUser) { %>
        <a href="/user/signup" class="btn btn-signup">Sign up</a>
        <a href="/user/login" class="btn btn-login">Log In</a>
        <% } else { %>
        <span class="welcome-text"
          >Welcome,
          <a href="/user/<%= currUser._id %>" class="username-link"
            ><%= currUser.username %>!</a
          ></span
        >
        <a href="/user/logout" class="btn btn-login">Logout</a>
        <% } %>
      </div>

      <div class="logo-container">
        <a href="/shot" class="logo-link">
          <img class="logo-image" src="/images/Pixelary.png" alt="Pixelary" />
        </a>
      </div>

      <div class="desktop-nav-menu">
        <a href="/shot" class="nav-link">Explore</a>
        <a href="/shot/new" class="nav-link">Publish a Shot</a>
        <a href="/privacy" class="nav-link">Privacy</a>
      </div>
    </div>

    <% if(!currUser) { %>
    <div class="nav-right">
      <div class="signup-container">
        <a href="/user/signup" class="btn btn-signup">Sign up</a>
      </div>
      <div class="login-container">
        <a href="/user/login" class="btn btn-login">Log In</a>
      </div>
    </div>
    <% } else { %>
    <div class="nav-right">
      <div class="user-info">
        <span class="welcome-text"
          >Welcome,
          <a href="/user/<%= currUser._id %>" class="username-link"
            ><%= currUser.username %>!</a
          ></span
        >
      </div>
      <div class="login-container">
        <a href="/user/logout" class="btn btn-login">Logout</a>
      </div>
    </div>
    <% } %>
  </nav>
</header>
